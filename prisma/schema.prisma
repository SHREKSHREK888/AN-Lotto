generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Slip {
  id           String   @id @default(cuid())
  customerName String?
  roundName    String?
  status       String
  createdAt    DateTime @default(now())
  bets         Bet[]

  @@map("slips")
}

model Bet {
  id     String @id @default(cuid())
  slipId String
  type   String
  number String
  amount Float
  slip   Slip   @relation(fields: [slipId], references: [id], onDelete: Cascade)

  @@map("bets")
}

model Limit {
  id           String   @id @default(cuid())
  type         String
  number       String
  payoutPercent Float?
  createdAt    DateTime @default(now())

  @@map("limits")
}
